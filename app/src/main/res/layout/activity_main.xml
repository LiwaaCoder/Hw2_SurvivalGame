                android:id="@+id/game_IMG_stoneC12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_stone"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_stoneC13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_stone"
                android:visibility="visible" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_stoneC14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_stone"
                android:visibility="visible"

                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_stoneC15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_stone"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_car"
                android:visibility="invisible">

            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_car"
                android:visibility="visible">

            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_IMG_car3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
